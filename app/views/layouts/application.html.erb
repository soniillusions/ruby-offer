<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <div class="container">
    <nav class="navbar navbar-expand-lg custom-navbar">
      <div class="container-fluid">
        <%= link_to 'ruby-offer.ru', root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="<%= root_path %>">Вакансии</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="<%= users_resumes_path %>">Соискатели</a>
            </li>
          </ul>

          <ul class="navbar-nav ml-auto d-flex align-items-center">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span>Здравствуйте, <%= current_user.email %></span>
              </li>
              <li class="nav-item">
                <%= link_to 'Выйти', destroy_user_session_path, data: { 'turbo-method': :delete, 'turbo-confirm': 'Выйти? Вы уверены?' } %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Войти', new_user_session_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </div>

  </body>
</html>
