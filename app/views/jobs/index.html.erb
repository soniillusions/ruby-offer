<% @jobs.each do |job| %>
<div class="user-container">
  <div class="row">
    <div class="col-2">
      <div class="profile-picture" style="margin-top: 20px; margin-left: 20px">
        <%= image_tag("job.png") %>
      </div>
    </div>

    <div class="col-10">
      <div class="row">
        <div class="col">
          <b><%= job.title %></b>
        </div>
      </div>

      <div class="row" style="margin-bottom: 20px">
        <div class="col">
          <i class="bi bi-clock-history" style="margin-right: 5px"> <%= job.required_exp %> xp</i>

          <% if job.city.present? %>
            <i class="bi bi-geo-alt" style="margin-right: 5px"><%= job.city %></i>
          <% end %>

          <% if job.salary.present? %>
            <i class="bi bi-wallet2" style="margin-right: 5px"><%= job.salary %> $</i>
          <% end %>
        </div>
      </div>

      <div class="row" style="margin-right: auto">
        <div class="col">
          <p><%= job.body %></p><br />
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p>
            <%= link_to 'Подробнее', job_path(job), class: 'custom-link' %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
<% end %>

<%= paginate @jobs, :class => 'pagination' %>

