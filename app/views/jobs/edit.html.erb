<% currently_at t('menu.edit_job') %>

<%= form_with model: current_user.job, method: :put, url: user_job_path(current_user) do |f| %>

  <div class="resume-container">
    <h2><%= t('menu.edit_job') %></h2>

    <div class="row">
      <div class="col-12">
        <p>
          <%= f.label t('pages.jobs.edit.company_name') %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Название вашей компании" %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <p>
          <%= f.label t('pages.jobs.edit.city') %>
          <%= f.text_field :city, class: 'form-control', placeholder: "Населенный пункт" %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <p>
          <%= f.label t('pages.jobs.edit.description') %>
          <%= f.text_area :body, class: 'form-control resizable', style: 'min-height:200px' %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <p>
          <%= f.label t('pages.jobs.edit.salary') %>
          <%= f.number_field :salary, class: 'form-control', style: 'width: 150px', min: 0, placeholder: "0" %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <p>
          <%= f.label t('pages.jobs.edit.experience') %>
          <%= f.number_field :required_exp, class: 'form-control', style: 'width: 150px', min: 0, placeholder: "0"  %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <p>
          <%= f.submit t('pages.jobs.edit.send'), class: 'btn btn-primary'  %>
        </p>
      </div>
    </div>

    <%= link_to t('pages.jobs.edit.delete'), user_job_path(@job), class: "text-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>
